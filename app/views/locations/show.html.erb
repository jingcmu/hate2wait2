<p id="notice"><%= notice %></p>

<p>
  <b>Location Name(address):</b>
  <%= @location.name %>
</p>

<p>
  <b>Capacity:</b>
  <b> <%= @location.capacity %> </b>
</p>

<p>
  <b><%= get_seats_number %></b>
  seats has been taken! <br>
</p>

<p>
  <b><%= get_left_seats %></b>
  seats are available! <br>
</p>

<div id="seats">

  <%= render :partial=>"seat_list", :locals=>{:seats=>@location.seats} %>
</div>

<script>
    $(document).ready(function(){
        setInterval(updateSeats,5000);
    });
    function updateSeats(){
        $.ajax({
            url:  "/locations/<%= @location.id %>/seats",
            type: "GET",
        }).done(function(data){
                    $("#seats").html(data);
                });
    }
</script>

<%= render :partial=>"new_seat", :locals=>{:seat=>Seat.new(:location_id=>@location.id)} %>

<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Back', locations_path %>
