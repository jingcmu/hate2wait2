<p>
  <b><%= get_seats_number %></b>
  seats has been taken! <br>
</p>

<p>
  <b><%= get_left_seats %></b>
  seats are available! <br>
</p>

<table>
  <tr>
    <th>Customer</th>
    <th>Location ID</th>
  </tr>
  <% if seats.size != 0 %>
    <% for seat in seats %>
      <tr>
        <td><%=h seat.name %></td>
        <td><%=h seat.location_id %></td>
        <td><%= link_to 'Show', seat %></td>
        <td><%= link_to 'Edit', edit_seat_path(seat) %></td>
        <td><%= link_to 'Destroy', seat, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  <% end %>
</table>

