<h1>Listing seats</h1>

<table>
  <tr>
    <th>Customer</th>
    <th>Location ID</th>
  </tr>

  <% for seat in seats %>
      <tr>
        <td><%=h seat.name %></td>
        <td><%=h seat.location_id %></td>
        <td><%= link_to 'Show', seat %></td>
        <td><%= link_to 'Edit', edit_seat_path(seat) %></td>
        <td><%= link_to 'Destroy', seat, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
  <% end %>
</table>
